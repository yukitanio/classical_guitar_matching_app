<!DOCTYPE html>
<html>
  <head>
    <title>ClaMa</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
    <![endif]-->
  </head>
  <body>
    <header class="navbar navbar-expand-md navbar-dark bg-dark sticky-top">
      <a class="navbar-brand"><%= link_to "ClaMa",'#'%></a>
      <ul class="navbar-nav mr-auto">
        <li class="nav-item ml-5"><%= link_to "ClaMaについて",'#' %></li>
        <li class="notice"><%= notice %></li>
        <li class="alert"><%= alert %></li>
      </ul>
      <% if user_signed_in? %>
        <ul class="navbar-nav">
          <li class="nav-item mr-3"><%= current_user.id %></li>
          <li class="nav-item mr-3"><%= link_to "ログイン",'#' %></li>
          <li class="nav-item mr-3"><%= link_to "マイページ",'#' %></li>
        </ul>
      <% else %>
        <ul class="navbar-nav">
          <li class="nav-item mr-3"><%= link_to "ログイン",'#' %></li>
          <li class="nav-item mr-3"><%= link_to "ユーザー登録",'#' %></li>
        </ul>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
