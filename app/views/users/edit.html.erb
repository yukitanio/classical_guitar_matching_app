<div class="py-3">
  <div class="container">
    <h4 class="mb-3">どのユーザーとして登録しますか？</h4>

    <%= form_with model: @user do |f| %>
    <div class="form-group">
      <%= f.check_box :teacher %>
      <%= f.label :先生として登録する。 %>
    </div>
    <div class="form-group">
      <%= f.check_box :student %>
      <%= f.label :生徒として登録する。 %>
    </div>
    <div class="mb-3 border-top border-bottom">
      <h3>プロフィールを充実させよう</h3>
    </div>

    <div class="row p-3">
      <div class="col">
        <h5 class="mb-3">プロフィール写真をアップロード</h5>
        <div class="row">
          <div class="col-6 ">
            <%= image_tag("profile_image.jpeg", class: "img-fluid") %>
          </div>
          <div class="col-6">
            <div class="row">
              <%= f.file_field :image %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :name, 'お名前', class: 'col-2 col-form-label' %>
      <div class="col-10">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :birthday, '誕生日を設定', class: 'col-2 col-form-label' %>
      <div class="col-10">
        <%= f.month_field :birthday, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :sex, '性別を設定', class: 'col-2 col-form-label' %>
      <div class="col-10">
        <div class="row">
          <%= f.radio_button :sex, '男性' %>男性
        </div>
        <div class="row">
          <%= f.radio_button :sex, '女性' %>女性
        </div>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :area, 'エリアを設定', class: 'col-2 col-form-label' %>
      <div class="col-10">
        <%= f.select :area, ['東京都','神奈川県','埼玉県'], class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :comment, 'コメント', class: 'col-2 col-form-label' %>
      <div class="col-10">
        <%= f.text_area :comment, class: 'form-control' %>
      </div>
    </div>

      <%= f.submit "登録", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
